      #   usebundle => guac_create_connection( "$($(params).ssh_ballast_alias_name)",
      # 					     "$($(params).ballast_host_alias)",
      # 					     "ssh", "", "$(params)" );

      # "create SSH connection to the ballast last host alias for this cluster with no parent group"
      #   usebundle => guac_create_connection( "$($(params).ssh_ballast_last_alias_name)",
      # 					     "$($(params).ballast_host_alias)$(ballast_vars.config[alias_last])",
      # 					     "ssh", "", "$(params)" );
