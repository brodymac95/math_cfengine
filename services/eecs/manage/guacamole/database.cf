bundle agent guac_tidy(cdir, day)
{
# @description: delete all guac sql query files after specified days
  files:
      "$(cdir)/guac.*"
	pathtype => "regex",
        file_select => days_old( "$(day)" ),
	delete => tidy;

  reports:
   (inform_mode|verbose_mode)::
      "$(this.bundle): Activated";
      
    (DEBUG|DEBUG_guacamole)::
}

